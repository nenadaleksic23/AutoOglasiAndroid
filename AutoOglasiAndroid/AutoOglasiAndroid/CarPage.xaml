<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoOglasiAndroid.CarPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding automobiliModel.SlikaAutomobila}"/>
            <Label Text="{Binding automobiliModel.NazivAutomobila}"/>

            <Label Text="Komentari" FontSize="20" TextColor="Gray"/>
            <ListView ItemsSource="{Binding automobiliModel.KomentariZaAutomobil}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Komentar}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>