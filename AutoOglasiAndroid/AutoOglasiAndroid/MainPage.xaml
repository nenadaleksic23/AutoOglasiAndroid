<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AutoOglasiAndroid"
             x:Class="AutoOglasiAndroid.MainPage">

    <StackLayout>
        <Label Text="Chose your brand"/>
        <Picker Title="--Brand Not picked--"
                ItemsSource="{Binding AllBrands}"
                ItemDisplayBinding="{Binding NazivBrenda}"/>
        <Label Text="Year of manufacturing"/>
        <Picker Title="--Year Not picked--"
                ItemsSource="{Binding CarYears}"
                />
        <Button Text="Search" HorizontalOptions="FillAndExpand"/>
        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell
                       Text="This is first image"
                        Detail="This is caption"
                        TextColor="Black"
                        DetailColor="Gray"
                        ImageSource="Audi.jpg"/>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>

</ContentPage>
